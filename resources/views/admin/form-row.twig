<tr>
  <th scope="row">
    <label for="{{field.name}}" type="text">{{field.label}}</label>
  </th>
  <td>
    <input name="{{field.name}}" type="{{field.type|default('text')}}" class="regular-text" value="{{field.value}}" {{ (field.disabled) ? 'disabled' : ''}}/>
    <p class="description">{{field.description|raw}}</p>
  </td>
</tr>

